@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<section class="container accountBox">
<div class="card">
    <div class="card-body">
        <form class="d-flex flex-column" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-group col-12">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
       @*         <label asp-for="Input.Email" class="form-label"></label>*@
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="رمز عبور" />
                @*<label asp-for="Input.Password" class="form-label"></label>*@
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="تکرار رمز عبور" />
                @*<label asp-for="Input.ConfirmPassword" class="form-label"></label>*@
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                            <button type="submit" class="w-100 btn btn-lg btn-primary">تغییر</button>
                </div>
        </form>
    </div>
</div>
</section>

@section InlineScript {
    <partial name="_ValidationScriptsPartial" />
}

