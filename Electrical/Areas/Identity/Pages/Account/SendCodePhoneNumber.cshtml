@page
@using PresentationLayer.Areas.Identity.Pages.Account;
@model SendCodePhoneNumberModel
@{
    ViewData["Title"] = "ارسال کد تایید";
}
<div class="form-floating mb-3">
       <form id="account" method="post">
    <input asp-for="Input.Code" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
    <label asp-for="Input.Code" class="form-label">Email</label>
    <span asp-validation-for="Input.Code" class="text-danger"></span>
        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
        </div>
    </form>
</div>