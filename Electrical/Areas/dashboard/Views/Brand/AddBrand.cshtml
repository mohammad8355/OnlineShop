@model BrandViewModel;
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-12">
                <!-- general form elements -->

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">اطلاعات اولیه</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div class="card-body">
                        <form asp-action="AddBrand" method="post" class="form" enctype="multipart/form-data">
                            @if(ViewBag.success != null){
                                <div class="alert alert-success">@ViewBag.success</div>
                            }
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">نام برند</label>
                                <input class="form-control" asp-for="Name" id="exampleInputPassword1" placeholder="نام برند را وارد کنید">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">عکس</label>
                                <input class="form-control" asp-for="file" id="exampleInputPassword1">
                            </div>

                            <!-- /.card-body -->
                            <button type="submit" class="btn btn-primary">افزودن</button>

                        </form>

                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>

                <!--/.col (right) -->
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
