@using BusinessEntity;
@model AddEditCategoryViewModel

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card card-primary col-sm-10">
                <div class="card-header">
                    <h3>افزودن دسته بندی</h3>
                </div>
                <div class="card-body">
                    @if (Model == null)
                    {
                        <form method="post" asp-action="AddCategory" asp-controller="Category">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <label>  دسته بندی</label>
                                <select asp-for="headCategory_Id" asp-items="ViewBag.categories" class="form-select form-control">
                                    <optgroup label=" دسته بندی">
                                        <option value="0">سر دسته بندی را انتخاب کنید</option>

                                    </optgroup>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>نام  دسته بندی</label>
                                <input type="text" placeholder="نام  دسته بندی  را وارد کنید" asp-for="Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>آیدی  دسته بندی</label>
                                <input type="text" placeholder="آیدی  دسته بندی را وارد کنید" asp-for="IdentifierName" class=" form-control" />
                            </div>
                            <div class="form-group">
                                <label>توضیح   دسته بندی</label>
                                <textarea type="text" class="form-control" asp-for="Description">

                                    </textarea>
                            </div>
                            <button class="btn btn-success" type="submit">ثبت</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-action="EditCategory" asp-controller="Category">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <input class="hidden" hidden asp-for="Id" />
                                <label>  دسته بندی</label>
                                <select asp-for="headCategory_Id" asp-items="ViewBag.categories" class="form-select form-control">
                                    <optgroup label=" دسته بندی">
                                        <option value="0">سر دسته بندی را انتخاب کنید</option>

                                    </optgroup>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>نام  دسته بندی</label>
                                <input type="text" placeholder="نام  دسته بندی  را وارد کنید" asp-for="Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>آیدی  دسته بندی</label>
                                <input type="text" placeholder="آیدی  دسته بندی را وارد کنید" asp-for="IdentifierName" class=" form-control" />
                            </div>
                            <div class="form-group">
                                <label>توضیح   دسته بندی</label>
                                <textarea type="text" class="form-control" asp-for="Description">

                                        </textarea>
                            </div>
                            <button class="btn btn-success" type="submit">ثبت</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
