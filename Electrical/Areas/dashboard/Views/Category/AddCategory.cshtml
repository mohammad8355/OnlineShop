@using BusinessEntity;
@model Category

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card card-primary col-sm-10">
                <div class="card-header">
                    <h3>افزودن سر دسته بندی</h3>
                </div>
                <div class="card-body">
                    @if(Model != null)
                    {
                        <form enctype="multipart/form-data" method="post">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <label>نام دسته بندی</label>
                                <input type="text" placeholder="نام سر دسته بندی  را وارد کنید" asp-for="Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>آیدی دسته بندی</label>
                                <input type="text" placeholder="آیدی دسته بندی را وارد کنید" asp-for="IdentifierName" class=" form-control" />
                            </div>
                            <div class="form-group">
                                <label>توضیح  دسته بندی</label>
                                <textarea type="text" class="form-control" asp-for="Description">

                                </textarea>
                            </div>
                            <button class="btn btn-success" type="submit">ثبت</button>
                        </form>
                    }
                    else
                    {
                        <form enctype="multipart/form-data" method="post">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <label>نام دسته بندی</label>
                                <input type="text" placeholder="نام سر دسته بندی  را وارد کنید" asp-for="Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>آیدی دسته بندی</label>
                                <input type="text" placeholder="آیدی دسته بندی را وارد کنید" asp-for="IdentifierName" class=" form-control" />
                            </div>
                            <div class="form-group">
                                <label>توضیح  دسته بندی</label>
                                <textarea type="text" class="form-control" asp-for="Description">

                                </textarea>
                            </div>
                            <button class="btn btn-success" type="submit">ثبت</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</section>