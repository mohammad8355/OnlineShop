@using PresentationLayer.Models.ViewModels;
@model AddEditSubCategoryViewModel

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card card-primary col-sm-10">
                <div class="card-header">
                    <h3>افزودن زیر دسته بندی</h3>
                </div>
                <div class="card-body">
                        <form method="post">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                            <input class="hidden" hidden asp-for="@Model.subCategory.Id"/>
                                <label>  دسته بندی</label>
                            <select asp-for="@Model.subCategory.category_Id" asp-items="ViewBag.categories" class="form-select form-control">
                                <optgroup label=" دسته بندی">
                              <option value="0" >سر دسته بندی را انتخاب کنید</option>

                                </optgroup>
                            </select>
                            </div>
                            <div class="form-group">
                                <label>نام زیر دسته بندی</label>
                                <input type="text" placeholder="نام زیر دسته بندی  را وارد کنید" asp-for="@Model.subCategory.Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>آیدی زیر دسته بندی</label>
                                <input type="text" placeholder="آیدی زیر دسته بندی را وارد کنید" asp-for="@Model.subCategory.IdentifierName" class=" form-control" />
                            </div>
                            <div class="form-group">
                                <label>توضیح  زیر دسته بندی</label>
                                <textarea type="text" class="form-control" asp-for="@Model.subCategory.Description">

                                </textarea>
                            </div>
                            <button class="btn btn-success" type="submit">ثبت</button>
                        </form>


                </div>
            </div>
        </div>
    </div>
</section>
