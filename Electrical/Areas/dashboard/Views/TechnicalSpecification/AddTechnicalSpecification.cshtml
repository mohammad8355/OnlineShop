@section InlineScripts{
    <script>
        $.ajax(
            {
                url: '@Url.Action("CategoryDropDown","Product")',
                type: 'GET',
                data: {
                    category_Id: $("#headcategory").val(),
                },
                success: function (data) {
                    console.log(data);
                    $('#category').empty();
                    $('#category').append('<option value="0"> دسته بندی</option>');
                    for (const item of data["$values"]) {
                        $('#category').append('<option value="' + item.value + '">' + item.text + '</ option>');
                    };

                }
            });
               console.log($('#subcategory').val());
        console.log($("#category").val());
        window.addEventListener('load', () => {
            $.ajax(
                {
                    url: '@Url.Action("SubCategoryDropDown","Product")',
                    type: 'GET',
                    data: {
                        category_Id: $("#category").val(),
                    },
                    success: function (data) {
                        console.log(data);
                        $('#subcategory').empty();
                        for (const item of data["$values"]) {
                            $('#subcategory').append('<option value="' + item.value + '">' + item.text + '</ option>');
                        };

                    }
                });
        })

        $("#headcategory").click(function () {
            $.ajax(
                {
                    url: '@Url.Action("CategoryDropDown","Product")',
                    type: 'GET',
                    data: {
                        category_Id: $("#headcategory").val(),
                    },
                    success: function (data) {
                     
                        $('#category').empty();
                           $('#category').append('<option value="0"> دسته بندی</option>');
                        for (const item of data["$values"]) {
                            $('#category').append('<option value="' + item.value + '">' + item.text + '</ option>');
                        };
                    }
                });
        })
        $("#category").change(function () {
            $.ajax(
                {
                    url: '@Url.Action("SubCategoryDropDown","Product")',
                    type: 'GET',
                    data: {
                        category_Id: $("#category").val(),
                    },
                    success: function (data) {
                        console.log(data);
                        $('#subcategory').empty();
                        $('#subcategory').append('<option value="0">زیر دسته بندی</option>');
                        for (const item of data["$values"]) {
                            $('#subcategory').append('<option value="' + item.value + '">' + item.text + '</ option>');
                        };
                        $(document).ready(function () {
                            $('.js-example-basic-multiple').select2({
                                   placeholder: "Select a state",
                                   allowClear: true,
                                  theme: 'bootstrap4',
                                  dire:'rtl',
                            });
                        });
                    }
                });
        })

    </script>
}