@model AddEditTechnicalSpecificationViewModel
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-12">
                <!-- general form elements -->
                    <form class="form" asp-action="AddTechnicalSpecification" asp-controller="TechnicalSpecification" asp-area="dashboard" method="Post">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">اطلاعات اولیه</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="card-body">
                                @if (ViewBag.success != null)
                                {
                                    <div class="alert alert-success">
                                        <strong>@ViewBag.success</strong>
                                    </div>
                                }
                                <div asp-validation-summary="All" class="alert alert-danger"></div>
                                <div class="form-group col-sm-4">
                                    <label>سر دسته بندی</label>
                                    <select class="form-control" asp-items="ViewBag.HeadCategories" id="headcategory">
                                        <option value="0">سر دسته بندی</option>
                                    </select>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label> دسته بندی</label>
                                    <select class="form-control"  id="category">
                                        <option value="0">دسته بندی</option>
                                    </select>
                                </div>
                                <!-- select -->
                                <div class="form-group col-sm-4">
                                    <label>زیر دسته بندی</label>
                                    <select class="form-control js-example-basic-multiple select2bs4" asp-for="subCategories" id="subcategory" multiple>
                                        <option value="0">زیر دسته بندی</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">نام مشخصه</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="نام مشخصه را وارد کنید" asp-for="Name">
                                </div>
                                <div class="form-group">
                                    <label> توضیح مقدار</label>
                                    <textarea asp-for="Description" class="form-control">

                                    </textarea>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                            <button href="#" type="submit" class="btn btn-primary">افزودن</button>
                        </div>
                    </form>
                  
                }
            </div>
        </div>
    </div>
</section>
