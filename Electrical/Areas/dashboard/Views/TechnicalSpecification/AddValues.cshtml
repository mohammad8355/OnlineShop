@model AddAdjValuesViewModel
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card card-warning col-12">
                <div class="card-header">
                    <h3 class="card-title col-6">افزودن مقدار به مشخصه </h3>
                </div>
                <div class="card-body">
                    <form method="Post" asp-action="AddValues" asp-controller="TechnicalSpecification" class="form">

                        @if (ViewBag.success != null)
                        {
                            <div class="alert alert-success">
                                <strong>@ViewBag.success</strong>
                            </div>
                        }
                        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

                        <!-- select -->
                        <div class="form-group col-sm-4">
                            <label>مشخصات کلید ها</label>
                            <select class="form-control" asp-items="ViewBag.AdjKeys" asp-for="@Model.adjkey_Id" id="adjkey">
                                <option value="0">کلید ها</option>
                            </select>
                        </div>
                        <div class="col-12">

                            <div class="form-group">
                                <label>مقدار عددی</label>
                                <input type="number" class="form-control" placeholder="مفدار عددی را وارد کنید" asp-for="@Model.NumericValue" id="numberInput" />
                            </div>
                            <div class="form-group">
                                <label>مقدار متنی</label>
                                <input type="text" class="form-control" placeholder="مفدار متنی را وارد کنید" asp-for="@Model.StringValue" id="textInput" />
                            </div>
                            <div class="form-group">
                                <label>مقدار دارد /ندارد</label>
                                <input type="checkbox" class="form-control" placeholder="مفدار دارد / ندارد را وارد کنید" asp-for="@Model.BoolValue" id="boolInput" />
                            </div>

                        </div>
                        <button type="submit" class="btn btn-primary" id="submitbtn">افزودن</button>
                        <!-- /.card-body -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section InlineScripts{
    <script>

        var numberInput = document.querySelector("#numberInput");
        var textInput = document.querySelector("#textInput");
        var boolInput = document.querySelector("#boolInput");
        var adjkeySelect = document.getElementById("adjkey");
        console.log(adjkeySelect);
        adjkeySelect.addEventListener("change", function () {
            var value = adjkeySelect.value;
            $.ajax({
                url: '@Url.Action("GetAdjkeyById","TechnicalSpecification")',
                type: 'GET',
                data: { id: value },
                success: function (result) {
                    switch (result.datatype) {
                        case "int":
                            textInput.disabled = true;
                            boolInput.disabled = true;
                            numberInput.disabled = false;
                            break;
                        case "string":
                            numberInput.disabled = true;
                            boolInput.disabled = true;
                            textInput.disabled = false;
                            break;
                        case "bool":
                            textInput.disabled = true;
                            numberInput.disabled = true;
                            boolInput.disabled = false;
                            break;
                        default:
                            boolInput.disabled = false;
                            numberInput.disabled = false;
                            textInput.disabled = false;

                    }
                },
                error: function () {
                    textInput.disabled = false;
                    boolInput.disabled = false;
                    numberInput.disabled = false;
                }

            })

        })
    </script>
    }
