@using Microsoft.AspNetCore.Identity;
@model EditUserViewModel
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-12">
                <!-- general form elements -->
                    <form class="form" asp-action="EditUser" asp-controller="User" method="Post">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">ویرایش کاربر</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="card-body">
 
                                <div class="alert alert-danger" asp-validation-summary="All"></div>
                
                                <input asp-for="User.Id" hidden class="hidden">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">نام کاربر</label>
                                    <input asp-for="User.UserName" class="form-control" id="exampleInputEmail1" placeholder="نام کاربر را وارد کنید">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">ایمیل</label>
                                    <input asp-for="User.Email" class="form-control" id="exampleInputEmail1" placeholder=" ایمیل را وارد کنید">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">تایید ایمیل</label>
                                    <input asp-for="User.EmailConfirmed" class="form-control" id="exampleInputEmail1">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">شماره موبایل </label>
                                    <input asp-for="User.PhoneNumber" class="form-control" id="exampleInputEmail1" placeholder="شماره موبایل  را وارد کنید">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">تایید شماره موبایل</label>
                                    <input asp-for="User.PhoneNumberConfirmed" class="form-control" id="exampleInputEmail1">
                                </div>
                                <div class="form-group">
                                    <label>مقام کاربر</label>
                                    <select class="form-control" multiple asp-for="@Model.Role" asp-items="@Model.RoleList">
                                        <option>لطفا یک نقش انتخاب کنید</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">فعال</label>
                                    <input asp-for="User.LockoutEnabled" class="form-control" id="exampleInputEmail1">
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                            <button type="submit" class="btn btn-primary">ویرایش</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</section>