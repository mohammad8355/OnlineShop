@using DataAccessLayer.Models;
@using Microsoft.AspNetCore.Identity;
@model Notification
@inject UserManager<ApplicationUser> _usermanager;
<div class="row">
    <form method="post" asp-action="Notification" asp-controller="User" asp-area="dashboard">
         <div class="form-group">
            <label>type</label>
            <input asp-for="@Model.Type" class="form-control" />
        </div>
        <div class="form-group">
            <label>Source</label>
            <input asp-for="@Model.Source" class="form-control" />
        </div>
        <div class="form-group">
            <label>Message</label>
            <textarea asp-for="@Model.message" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <select asp-for="@Model.User_Id">
                @foreach(var user in _usermanager.Users)
                {
                    <option value="@user.Id" >@user.UserName</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-success">send</button>
    </form>
</div>
