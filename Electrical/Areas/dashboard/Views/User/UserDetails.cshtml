@model UserDetailsViewModel;
<div class="container" dir="rtl">
    <div class="row">
        <div class="info-box col-sm-6 col-lg-3">
            <span class="info-box-icon bg-info">
                <i class="fa-solid fa-basket-shopping"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">تعداد خرید</span>
                <span class="info-box-number">5</span>
            </div>

        </div>
        <div class="info-box col-sm-6 col-lg-3">
            <span class="info-box-icon bg-primary">
                <i class="fa-solid fa-coins"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">مقدار خرید</span>
                <span class="info-box-number">2000,000 T</span>
            </div>
        </div>
        <div class="info-box col-sm-6 col-lg-3">
            <span class="info-box-icon bg-warning">
                <i class="fa-solid fa-comments"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">تعداد کامنت ها</span>
                <span class="info-box-number">20</span>
            </div>

        </div>
        <div class="info-box col-sm-6 col-lg-3">
            <span class="info-box-icon bg-danger">
                <i class="fa-solid fa-ticket"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">تعداد تیکت ها</span>
                <span class="info-box-number">7</span>
            </div>

        </div>
    </div>
    <div class="d-flex gap-2 flex-wrap justify-content-center ">
        <div class="card card-info col-10 col-md-4 m-0 p-0">
            <div class="card-header">
                <h3>مشخصات اولیه</h3>
            </div>
            <div class="card-body col-12">
                <div class="col-sm-6">
                    <img src="AdminLTE/dist/img/avatar.png" class="rounded-circle border col-12" />
                </div>
                <div class="col-sm-6">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>
                                    نام کاربری
                                </td>
                                <td>
                                    @Model.User.UserName
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    نام و نام خانوادگی 
                                </td>
                                <td>
                                    @Model.User.FullName
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    تاریخ تولد 
                                </td>
                                <td>
                                    @Model.User.brithDate
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    فعال 
                                </td>
                                <td>
                                    @if (Model.User.IsEnable)
                                    {
                                        <h6 class="badge badge-success">فعال</h6>
                                    }
                                    else
                                    {
                                        <h6 class="badge badge-danger">غیر فعال</h6>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    ایمیل
                                </td>
                                <td>
                                    @Model.User.Email
                                </td>
                            </tr>
                            <tr>
                            </tr>
                            <tr>
                                <td>
                                    نقش
                                </td>
                                <td>
                                    <ul>
                                        @foreach(var role in Model.Roles)
                                        {
                                            <li class="badge badge-primary"><h5 class="display-6">@role</h5></li>
                                        }
                                    </ul>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group" dir="ltr">
                        <a asp-action="DeleteUser" asp-controller="User" asp-route-Id="@Model.User.Id" class="btn btn-danger">حذف</a>
                        <a asp-action="EditUser" asp-controller="User" asp-route-Id="@Model.User.Id" class="btn btn-warning">ویرایش</a>
                        @if (Model.User.IsEnable)
                        {
                            <a  data-Id="@Model.User.Id" id="activebtn" class="btn btn-secondary">غیرفعال</a>
                        }
                        else
                        {
                            <a data-Id="@Model.User.Id" id="activebtn" class="btn btn-primary">فعال</a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="card card-primary col-10 col-md-8 m-0 p-0">
            <div class="card-header">
                <h3>خرید های اخیر</h3>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>عکس</th>
                            <th>نام محصول</th>
                            <th>تعداد محصول</th>
                            <th>قیمت محصول</th>
                            <th>تاریخ خرید</th>
                            <th>مشاهده</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><img src="AdminLTE/dist/img/prod-1.jpg" class="col-3" /></td>
                            <td>مانیتور</td>
                            <td>1</td>
