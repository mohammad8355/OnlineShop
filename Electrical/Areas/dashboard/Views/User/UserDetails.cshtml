                            <td>2023,08,12</td>
                            <td><a href="#" class="btn btn-primary">مشاهده فاکتور</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section InlineScripts{
    <script>
        $("#activebtn").on("click",function(){
            $.ajax({
                url:'@Url.Action("ActiveUser","User")',
                type:'GET',
                async:true,
                data:{Id: $(this).attr("data-Id")},
                success:function(data){
                    if(data.res){
                        alert("عملیات با موفقیت انحام شد");
                         location.reload();
                    }else{
                        alert("خطا در انجام عملیات");
                    }
                }
            })
        });
    </script>
}