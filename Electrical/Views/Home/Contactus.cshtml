@using DataAccessLayer.Models
@model List<Contact>
<section id="contactus">
    <div class="container container-md">
        <div class="header col-12">
            <h1>با ما در تماس باشید !</h1>
        </div>
        <div class="col-md-6 col-12 p-2">
            <div style="width: 100%" class="rounded-4 overflow-hidden">
                <iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=1%20Grafton%20Street,%20Dublin,%20Ireland+(DocIT)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
                    <a href="https://www.gps.ie/">gps systems</a>
                </iframe>
            </div>
        </div>
        <article class="col-md-6 col-12">
            @{
                var list = Model.Where(c => c.IsSocialMedia == false).ToList();
            }
            @if (list != null)
            {
                <ul>
                    @foreach (var con in list)
                    {
                        <li>
                            <a href="@con.Content">
                                <p>@con.Name : @con.Content </p>
                                <i class="fa-solid fa-phone"></i>
                            </a>
                        </li>
                    }

            </ul>
            }
            <h3 class="text-center">ما را در فضای مجازی دنبال کنید </h3>
            @{
                var sociallist = Model.Where(c => c.IsSocialMedia == true).ToList();
            }
            @if(list != null)
            {
                <ul class="nav col-12 m-3 justify-content-center">
                    @foreach (var con in sociallist)
                    {
                        <li><a href="@con.Content">
                                <!--<i class="fa-brands fa-telegram"></i>-->
                                @con.Name
                            </a></li>
                    }
                </ul>
            }
        </article>
    </div>
</section>