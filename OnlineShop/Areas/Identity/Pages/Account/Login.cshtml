@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

        <div class="h-screen flex flex-col justify-center items-center ">
            <form id="account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <div class="flex flex-col gap-y-2 bg-white rounded-2xl shadow-custom h-auto min-w-[400px] py-5 px-4">
                    <img class="w-32 mx-auto" src="~/Image/logo.png" alt="">
                    <div class="mt-5 text-lg font-semibold text-zinc-800">
                        ورود
                    </div>
                    <div class="my-4 text-xs text-zinc-500">
                        لطفا شماره موبایل خود را وارد کنید
                    </div>
                    <div class="flex flex-col gap-y-1">
                        <input aria-required="true" type="tel" placeholder="شماره تلفن"  asp-for="Input.PhoneNumber" class="placeholder:text-right text-sm block w-full rounded-md border border-gray-300 px-3 py-3 font-normal text-gray-700 outline-none transition-all focus:border-zinc-500 focus:outline-none">
                    </div>
                    <div class="flex flex-col gap-y-1">
                        <input aria-required="true" type="password" placeholder="************"  asp-for="Input.Password" class="placeholder:text-right text-sm block w-full rounded-md border border-gray-300 px-3 py-3 font-normal text-gray-700 outline-none transition-all focus:border-zinc-500 focus:outline-none">
                    </div>
                    <button type="submit" class="w-full flex items-center justify-center gap-x-1 text-sm max-w-md mt-10 py-3 rounded-lg text-white bg-gradient-to-bl from-primary-600 to-primary-800 hover:opacity-85 transition">
                        ورود
                    </Button>
                    <a class="text-decoration-underline text-primary-500" asp-page="/Account/Register" asp-area="Identity">هنوز ثبت نام نکردی؟</a>
                    <a class="text-decoration-underline text-primary-500" asp-page="/Account/PhoneNumberConfirm" asp-area="Identity"
                       asp-route-phonenumber="" >شماره تلفنتو تایید نکردی ؟</a>
                </div>
            </form>
        </div>
