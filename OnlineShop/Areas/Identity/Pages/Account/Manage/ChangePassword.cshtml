@page
@model ChangePasswordModel
@{
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<partial name="_StatusMessage" for="StatusMessage" />

        <form id="change-password-form" method="post" class=" col-12">
            <h3>(رمز عبور)اطلاعات هویتی</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group col-12">
                <input asp-for="Input.OldPassword" autocomplete="current-password" aria-required="true" placeholder="رمز عبور فعلی را وارد کنید" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <input asp-for="Input.NewPassword" autocomplete="new-password" aria-required="true" placeholder="رمز عبور جدید را وارد کنید" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="رمز عبور جدید را تایید کنید"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-block col-12 btn-success">ثبت</button>
        </form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
