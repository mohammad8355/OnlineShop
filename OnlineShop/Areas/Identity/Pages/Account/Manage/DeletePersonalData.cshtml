@page
@model DeletePersonalDataModel
@{
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="alert alert-warning" role="alert">
    <p>
        <strong>حذف این اطلاعات به کامل اکانت شما را از بین خواهد برد و قابل بازگشت نیست !</strong>
    </p>
</div>

    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="رمز خود را وارد کنید" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-block col-12 btn-danger" type="submit">اکانت من رو حذف کن و ببند</button>
    </form>

@section ScriptRefrence {
    <partial name="_ValidationScriptsPartial" />
}
