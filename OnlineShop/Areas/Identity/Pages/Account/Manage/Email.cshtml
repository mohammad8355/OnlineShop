@page
@model EmailModel
@{
    ViewData["ActivePage"] = ManageNavPages.Email;
}
<partial name="_StatusMessage" for="StatusMessage" />

<form id="email-form" method="post" class="col-md-8 col-12">
    <h3>(ایمیل )اطلاعات هویتی</h3>
    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
    @if (Model.IsEmailConfirmed)
    {
        <div class="form-group col-12 input-group">
            <input asp-for="Email" placeholder="لطفا ایمیل خود را وارد کنید" disabled />
            <div class="input-group-append">
                <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
            </div>
        </div>
    }
    else
    {
        <div class="form-group col-12">
            <input asp-for="Email" placeholder="لطفا ایمیل خود را واد کنید" disabled />
            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-outline-primary">ارسال تایید ایمیل</button>
        </div>
    }
    <div class="form-group col-12">
        <input asp-for="Input.NewEmail" autocomplete="email" aria-required="true" placeholder="لطفا ایمیل جدید را وارد کنید" />
        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
    </div>
    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-block col-12 btn-success">ثبت</button>
</form>

@section ScriptRefrence {
    <partial name="_ValidationScriptsPartial" />
}
