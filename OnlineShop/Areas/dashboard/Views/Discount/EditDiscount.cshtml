@model AddEditDiscountViewModel
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-12">
                <!-- general form elements -->

                    <form class="form" asp-action="EditDiscount" asp-controller="Discount">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">ویرایش تخفیف</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="card-body">
                                <div class="form-group">
                                    <input asp-for="Id" hidden class="hidden" />
                                    <label for="exampleInputEmail1">نام تخفیف</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="Name" placeholder="نام تخفیف را وارد کنید">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">مقدار تخفیف</label>
                                    <input type="number" class="form-control" id="exampleInputEmail1" asp-for="Value" placeholder="مقدار تخفیف را وارد کنید">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">مدت زمان</label>
                                    <input type="number" class="form-control" asp-for="Duration" id="exampleInputEmail1" placeholder="مدت زمان  را وارد کنید">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">کد تحفیف</label>
                                    <input type="text" class="form-control" asp-for="DiscountCode" id="exampleInputEmail1" placeholder="اختیاری) کد تخفبف   را وارد کنید)">
                                </div>
                                <div class="form-group">
                                    <label>نوع تاریخ</label>
                                    <select class="form-control" asp-for="DateBase">
                                        <option value="minute">دقیقه</option>
                                        <option value="day">روز</option>
                                        <option value="week">هفته</option>
                                        <option value="mounth">ماه</option>
                                        <option value="year">سال</option>
                                    </select>
                                </div>
                                <select class="multiple-select" multiple asp-items="Model.selectLists" asp-for="discountToProducts">
                                    <option value="0">محصولات مورد نظر را وارد کنید</option>
                                </select>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">فعال</label>
                                    <input type="checkbox" asp-for="Active" class="form-control" id="exampleInputEmail1">
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                            <button type="submit" class="btn btn-primary">ویرایش</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</section>
@section RefrenceScripts{
    <script src="AdminLTE/plugins/select2/js/select2.full.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
}
@section InlineScripts
    {
    <script>
        $(document).ready(function () {
            $(".multiple-select").select2();
        })
    </script>
}
