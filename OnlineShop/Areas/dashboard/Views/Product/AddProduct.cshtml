@model AddEditProductViewModel;
@{
    ViewBag.brands = new SelectList(Model.brands, "Id", "Name");
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-12">
                <!-- general form elements -->

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">اطلاعات اولیه</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div class="card-body">
                        <form asp-action="AddProduct" method="post" class="form" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">نام محصول</label>
                                <input class="form-control" asp-for="Name" id="exampleInputEmail1" placeholder="نام محصول را وارد کنید">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">قیمت</label>
                                <input class="form-control" asp-for="Price" id="exampleInputPassword1" placeholder="ریال)قیمت محصول) ">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">تخفیف</label>
                                <input class="form-control" asp-for="Discount" id="exampleInputPassword1" placeholder="ریال)تخفیف محصول) ">
                            </div>
                            <div class="form-group">
                                <label>Textarea</label>
                                <textarea class="form-control" rows="3" asp-for="Description" placeholder=" توضیحات محصول را وارد کنید..."></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">وزن</label>
                                <input class="form-control" asp-for="Weight" id="exampleInputPassword1" placeholder="وزن محصول">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">عرض</label>
                                <input class="form-control" asp-for="Width" id="exampleInputPassword1" placeholder="عرض محصول">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">طول</label>
                                <input class="form-control" asp-for="length" id="exampleInputPassword1" placeholder="طول محصول">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">ارتفاع</label>
                                <input class="form-control" asp-for="height" id="exampleInputPassword1" placeholder="ارتفاع محصول">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">تعداد</label>
                                <input class="form-control" asp-for="QuantityInStock" id="exampleInputPassword1" placeholder="تعداد محصول">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">عکس</label>
                                <input class="form-control" asp-for="File" multiple required>
                            </div>
                            <div class="form-group">
                                <select asp-for="@Model.Brand_Id" asp-items="@ViewBag.brands" class="form-control">
                                    <option value="0">یک برند انتخاب کنید</option>
                                </select>
                            </div>
                            <div class="form-group col-sm-6">
                                <label>دسته بندی</label>
                                <div class="form-group">
                                    @await Component.InvokeAsync("CategoryList","SelectList")
                                </div>
                            </div>

                            <!-- /.card-body -->
                            <button type="submit" class="btn btn-primary">افزودن</button>

                        </form>

                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>

                <!--/.col (right) -->
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
@section  InlineScripts{
    <script>
        $(".headlist").next(".list").slideUp();
        $(".headlist").click(function () {
            $(this).next(".list").slideToggle();
        });
        $('a.headlist input[type="checkbox"]').change(function () {
            console.log("enter foreach");

            var $checkbox = $(this);
            var $childCheckboxes = $checkbox.parent().siblings('ul').find('input[type="checkbox"]');

            if ($checkbox.prop('checked')) {
                // Check child checkboxes
                $childCheckboxes.prop('checked', true);
            } else {
                // Uncheck child checkboxes when the parent is unchecked
                $childCheckboxes.prop('checked', false);
            }
        });
    </script>
}