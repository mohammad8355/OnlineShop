@model AnswerTicketViewModel;
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card card-primary col-sm-10">
                <div class="card-header" >
                    <h3>پاسخ به تیکت</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AnswerTicket" asp-controller="Ticket" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger validation"></div>
                        <div class="form-group">
                            <textarea asp-for="@Model.TicketDescription" class="form-control disabled" disabled>
                                @Model.TicketDescription
                            </textarea>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="AnswerDescription" class="form-control" >

                            </textarea>
                        </div>
                        <input asp-for="Username" value="@User.Identity.Name" class="hidden" hidden />
                        <input asp-for="TicketId" class="hidden" hidden />
                        <button type="submit" class="btn btn-primary">ثبت</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section InlineScripts{
    <script>
        if ($(".validation ul li").text().length == 0) {
            $(".validation").css("display", "none");
        } else {
            $(".validation").css("display", "block");
        }
    </script>
}