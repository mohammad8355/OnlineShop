@page
@model ForgotPasswordModel
<section class="container accountBox">
<div class="card">
    <div class="card-body">
        <form class="d-flex flex-column" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group col-12">
             
           @*     <label asp-for="Input.Email" class="form-label"></label>*@
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                    <button type="submit" class="w-100 btn btn-lg btn-primary">تغییر رمز عبور</button>
            </div>
            <a asp-page="./Login"> ورود</a>
        </form>
    </div>
</div>
</section>
@section InlineScript {
    <partial name="_ValidationScriptsPartial" />
}
